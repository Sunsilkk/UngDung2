<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    tools:layout_editor_absoluteX="-6dp"
    tools:layout_editor_absoluteY="-37dp"
    android:background="@drawable/background_image">


    <!--Description-->

    <!-- Day + temp + Location + feels -->

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Hi, ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/border1"
        android:layout_width="377dp"
        android:layout_height="283dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi"
        app:srcCompat="@drawable/border" />

    <ImageView
        android:id="@+id/descrImg"
        android:layout_width="101dp"
        android:layout_height="94dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="@+id/border1"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="@+id/border1"
        app:layout_constraintTop_toTopOf="@+id/border1"
        app:srcCompat="@drawable/weather" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Decription"
        app:layout_constraintEnd_toEndOf="@+id/border1"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="@+id/border1"
        app:layout_constraintTop_toBottomOf="@+id/descrImg" />

    <!--  Sunrise + Sunset + Humid-->

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toEndOf="@id/descrImg"
        app:layout_constraintTop_toTopOf="@+id/border1" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:text="Temp"
        app:layout_constraintStart_toEndOf="@+id/descrImg"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/descrImg"
        app:layout_constraintTop_toBottomOf="@+id/day" />

    <TextView
        android:id="@+id/feels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="Feels"
        app:layout_constraintStart_toEndOf="@+id/descr"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <ImageView
        android:id="@+id/border2"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border1"
        app:srcCompat="@drawable/rainbow_border" />

    <ImageView
        android:id="@+id/humidImg"
        android:layout_width="91dp"
        android:layout_height="64dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/border2"
        app:layout_constraintTop_toBottomOf="@+id/sunrise"
        app:srcCompat="@drawable/humidity" />

    <TextView
        android:id="@+id/humid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Humid"
        app:layout_constraintStart_toEndOf="@+id/humidImg"
        app:layout_constraintTop_toBottomOf="@+id/sunset" />

    <ImageView
        android:id="@+id/sunriseImg"
        android:layout_width="74dp"
        android:layout_height="91dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/border2"
        app:layout_constraintTop_toTopOf="@+id/border2"
        app:srcCompat="@drawable/sunrise" />

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="4dp"
        android:text="Sunrise"
        app:layout_constraintStart_toStartOf="@+id/border2"
        app:layout_constraintTop_toBottomOf="@+id/sunriseImg" />

    <ImageView
        android:id="@+id/sunsetImg"
        android:layout_width="73dp"
        android:layout_height="85dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/sunriseImg"
        app:layout_constraintTop_toTopOf="@+id/border2"
        app:srcCompat="@drawable/sunset" />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="Sunset"
        app:layout_constraintStart_toEndOf="@+id/sunrise"
        app:layout_constraintTop_toBottomOf="@+id/sunsetImg" />


</androidx.constraintlayout.widget.ConstraintLayout>